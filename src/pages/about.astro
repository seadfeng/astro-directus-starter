---
import { readItem } from "@directus/sdk";
import AboutDetails from "@layouts/AboutDetails.astro";
import type { AboutUs } from "lib/directus";
import directus from "lib/directus";
export const runtime = "edge";
const about = (await directus.request(
  // @ts-expect-error: Suppressing type error for demonstration purposes
  readItem("about_us", 1, {
    fields: [
      "*",
      {
        team: ["*"],
      },
    ],
  })
)) as AboutUs;
---

<AboutDetails about={about} />
